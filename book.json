{
  "root": "./docs",
  "branch": "master",
  "title": "Scala Web 开发 - 使用 Akka",
  "author": "杨景（羊八井）yangbajing at gmail.com",
  "plugins": [
    "include-codeblock",
    "mermaid",
    "prism",
    "-highlight",
    "disqus",
    "github-buttons",
    "image-captions",
    "splitter"
  ],
  "pluginsConfig": {
    "disqus": {
      "shortName": "yangbajing"
    },
    "github-buttons": {
      "repo": "yangbajing/scala-web-development",
      "types": [
        "star",
        "watch"
      ],
      "size": "small"
    },
    "image-captions": {
      "attributes": {
        "width": "600"
      },
      "caption": "图 _PAGE_LEVEL_._PAGE_IMAGE_NUMBER_ - _CAPTION_"
    },
    "sharing": {
      "weibo": true,
      "all": [
        "facebook",
        "google",
        "twitter",
        "weibo",
        "instapaper"
      ]
    }
  }
}
